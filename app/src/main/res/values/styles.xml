<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/light.black</item>
    </style>

    <style name="Secondary.Activity" parent="AppTheme">
        <item name="android:activityOpenEnterAnimation">@anim/activity_appear_on_open</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_leave_on_open</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_appear_on_close</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_leave_on_close</item>
    </style>


    <style name="Panel.Base" parent="AppTheme">
        <item name="android:background">#dbdbdb</item>
    </style>

    <style name="Text.Header.Caption" parent="AppTheme">
       <item name="android:textSize">25sp</item>
       <item name="android:textColor">#ff666666</item>
       <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Header.Secondary.Caption" parent="Text.Header.Caption">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Header.Caption.Light" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fffcfcfc</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#a0000000</item>
    </style>

    <style name="Text.Header.Secondary.Caption.Light" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fffcfcfc</item>
    </style>


    <style name="Text.Tile.Header.Light" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fffcfcfc</item>
    </style>

    <style name="Text.Tile.Header.Bigger.Light" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fffcfcfc</item>
    </style>

    <style name="Text.Tile.Header" parent="Text.Tile.Header.Light">
        <item name="android:textColor">#ff757575</item>
    </style>

    <style name="Text.Tile.Header.Bigger" parent="Text.Tile.Header.Bigger.Light">
        <item name="android:textColor">#ff757575</item>
    </style>

    <style name="Text.Tile.Clock.Light" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fffcfcfc</item>
    </style>

    <style name="Text.Section.Caption" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff7e7e7e</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Body.Caption" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff656565</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Body.Caption.Bigger" parent="Text.Body.Caption">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Body.Section.Caption" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff595959</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Item.Caption" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff3a3a3a</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Item.Sub.Caption" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fd0b45</item>
    </style>

    <style name="Text.Checkbox" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ff8e8e8e</item>
    </style>

    <style name="Text.Body" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff5d5d5d</item>
    </style>

    <style name="Text.Body.Light" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fffcfcfc</item>
    </style>

    <style name="Text.Body.Light.Bigger" parent="Text.Body.Light">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text.List.Action" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fffbfbfb</item>
    </style>


    <style name="Text.Body.Optional" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#ff878787</item>
    </style>

    <style name="Button.Panel.Light" parent="Button.Panel">
        <item name="android:textColor">#f6f6f6</item>
    </style>

    <style name="Button.Panel" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#ff30addd</item>
        <item name="android:textSize">15dip</item>
        <item name="android:background">@drawable/button_panel</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="Button.Action" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_action</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Button.Action.Dark" parent="Button.Action">
        <item name="android:background">@drawable/button_action_dark</item>
    </style>


    <style name="Text.Link" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff30addd</item>
    </style>

    <style name="Text.Widget.Counter" parent="AppTheme">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#fffafafa</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#80000000</item>
    </style>


    <style name="Text.No.Item.Caption" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffd2d2d2</item>
    </style>

    <style name="Text.No.Item" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff9a9a9a</item>
    </style>



    <style name="Text.Training.Title" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff6e6e6e</item>
    </style>

    <style name="Text.Training.Prompt" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ff6e6e6e</item>
    </style>

    <style name="Text.Training.Clock" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffa8a8a8</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Training.Pause.Clock" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffa8a8a8</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Tile.Caption" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff575757</item>
    </style>

    <style name="Text.Tile" parent="Text.Tile.Caption">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
