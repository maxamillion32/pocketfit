<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="Panel.Base" parent="AppTheme">
        <item name="android:background">#dbdbdb</item>
    </style>

    <style name="Text.Header.Caption" parent="AppTheme">
       <item name="android:textSize">25sp</item>
       <item name="android:textColor">#ff666666</item>
       <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Header.Secondary.Caption" parent="Text.Header.Caption">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Section.Caption" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff7e7e7e</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Body.Caption" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff656565</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Body.Section.Caption" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff595959</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Item.Caption" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff3a3a3a</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>

    <style name="Text.Item.Sub.Caption" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffff0c46</item>
    </style>

    <style name="Text.Checkbox" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ff8e8e8e</item>
    </style>

    <style name="Text.Body" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff5d5d5d</item>
    </style>

    <style name="Text.List.Action" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fffbfbfb</item>
    </style>


    <style name="Text.Body.Optional" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#ff878787</item>
    </style>

    <style name="Text.Widget.Counter" parent="AppTheme">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#fffafafa</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">#80000000</item>
    </style>


    <style name="Text.No.Item.Caption" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffd2d2d2</item>
    </style>

    <style name="Text.No.Item" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff9a9a9a</item>
    </style>

    <style name="Text.Tile.Caption" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff575757</item>
    </style>

    <style name="Text.Tile" parent="Text.Tile.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7e7e7e</item>
    </style>

</resources>
