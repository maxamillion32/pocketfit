<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/panel_actions"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            />

        <LinearLayout
            android:visibility="gone"
            android:layout_marginRight="150dp"
            android:id="@+id/header_main_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:id="@+id/caption"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pocket.Fit"
                style="@style/Text.Header.Caption.Light"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/header_secondary_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/secondary_caption"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary Example"
                style="@style/Text.Header.Secondary.Caption.Light"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>