<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/header">

        <LinearLayout
            android:id="@+id/panel_actions"
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            />

        <LinearLayout
            android:layout_marginRight="150dp"
            android:id="@+id/header_main_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:id="@+id/caption"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example"
                style="@style/Text.Header.Caption"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="150dp"
            android:id="@+id/header_secondary_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/secondary_caption_arrow"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_to_left2"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/secondary_caption"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary Example"
                style="@style/Text.Header.Secondary.Caption"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>