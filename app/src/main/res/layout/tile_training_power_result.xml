<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffededed"
    android:orientation="vertical">

    <TextView
        android:id="@+id/exercise_name"
        style="@style/Text.Tile.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="Example"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/exercise_set"
        style="@style/Text.Tile.Header.Bigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Set 1"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <GridLayout
            android:layout_centerInParent="true"
            android:id="@+id/panel_power"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_power_weight"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Weight, e.g. 70.5"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:imeOptions="flagNoExtractUi"
                android:inputType="numberDecimal"
                style="@style/Text.Body.Optional"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Body.Optional"
                android:text="kg"
                />
            <EditText
                android:id="@+id/edit_power_times"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Times, e.g. 10"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:inputType="number"
                android:imeOptions="flagNoExtractUi"
                style="@style/Text.Body.Optional"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Body.Optional"
                android:text="times"
                />
        </GridLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#4d8cf5">

        <Button
            android:id="@+id/action_main"
            style="@style/Button.Panel.Light"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Save" />

    </RelativeLayout>

</LinearLayout>
