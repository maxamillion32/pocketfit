<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dash.header.margin.side">

    <TextView
        android:translationX="@dimen/dash.header.margin.side"
        android:id="@+id/secondary_caption"
        style="@style/Text.Header.Secondary.Caption.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAllCaps="true"
        android:text="Secondary Example" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/panel_actions"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <include layout="@layout/actions_routine"/>

        </LinearLayout>

</LinearLayout>