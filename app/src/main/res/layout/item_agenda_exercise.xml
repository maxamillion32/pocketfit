<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/image_line"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/gray_line_bottom"/>
        <ImageView
            android:id="@+id/image_line_over"
            android:layout_below="@+id/image_line"
            android:src="@drawable/gray_line_both"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="fill_parent"/>
        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="40dp"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/image_circle"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/circle_gray"/>
            <TextView
                android:id="@+id/item_index"
                android:gravity="center"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:text="1"
                style="@style/Text.Agenda.Index"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:id="@+id/item_caption"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:text="Caption"
        android:singleLine="false"
        android:maxLines="2"
        style="@style/Text.Agenda.Caption"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>