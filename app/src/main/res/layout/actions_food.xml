<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >


    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/text_day"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/action_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mar, 2015"
        style="@style/Text.Body.Optional"/>

    <ImageView
        android:layout_toLeftOf="@+id/action_meal_list"
        android:id="@+id/action_today"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="@style/Button.Action.Dark.Header"
        android:src="@drawable/android_today"/>

    <ImageView
        android:id="@+id/action_meal_list"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="@style/Button.Action.Dark.Header"
        android:src="@drawable/android_list"/>

</RelativeLayout>