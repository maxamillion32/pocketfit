<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- The main content view -->
        <team.monroe.org.pocketfit.view.SlidingRelativeLayout
            android:visibility="visible"
            android:id="@+id/content_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_marginLeft="-1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/shadow"
                android:background="@color/background.main">

                <LinearLayout
                    android:id="@+id/background_stripe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/background.secondary"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/background.secondary"
                        android:orientation="vertical" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_routine_name"
                    style="@style/Text.Training.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Example" />

                <TextView
                    android:id="@+id/text_clock"
                    style="@style/Text.Training.Pause.Clock"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="00:00:00" />

                <TextView
                    android:id="@+id/text_pause_clock"
                    style="@style/Text.Training.Clock"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/text_clock"
                    android:gravity="top"
                    android:text="00:00:00" />


                <FrameLayout
                    android:id="@+id/fragment_container_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/action_options"
                    style="@style/Button.Action"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/options" />
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layer_shadow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#A2000000"
                android:orientation="vertical" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/layer_edit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tile_white_spec">
                    <include
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/panel_edit"
                        layout="@layout/multipanel_exercise_result_editor"/>

                    <LinearLayout
                        android:id="@+id/panel_actions"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/action_cancel"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Button.Panel"
                            android:text="Cancel"/>
                        <Button
                            android:id="@+id/action_save"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Button.Panel"
                            android:text="Save"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </team.monroe.org.pocketfit.view.SlidingRelativeLayout>

        <!-- The navigation drawer -->
        <RelativeLayout
                android:visibility="visible"
                android:id="@+id/left_drawer"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#fff7f7f7"
                >

                <ImageView
                    android:id="@+id/image_cover"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/agenda_cover_height"
                    android:src="@drawable/covert_loading"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:layout_below="@id/image_cover"
                    android:layout_marginTop="15dp"
                    android:id="@+id/text_description"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example"
                    android:singleLine="false"
                    android:maxLines="3"
                    style="@style/Text.Body.Optional"/>

                <ImageView
                    android:id="@+id/separator"
                    android:layout_below="@id/text_description"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/separator"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"/>

                <ListView
                    android:id="@+id/list_workout_agenda"
                    android:layout_below="@id/separator"
                    android:layout_width="fill_parent"
                    android:scrollbars="none"
                    android:listSelector="@android:color/transparent"
                    android:dividerHeight="0dp"
                    android:divider="@null"
                    android:layout_height="fill_parent"/>


            </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
