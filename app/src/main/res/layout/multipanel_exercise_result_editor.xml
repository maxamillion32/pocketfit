<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <GridLayout
        android:visibility="gone"
        android:id="@+id/panel_edit_power"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_power_weight"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Weight, e.g. 70.5"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            style="@style/Text.Body.Optional"
            />
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Body.Optional"
            android:text="kg"
            />
        <EditText
            android:id="@+id/edit_power_times"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Times, e.g. 10"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi"
            style="@style/Text.Body.Optional"
            />
        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Body.Optional"
            android:text="times"
            />
    </GridLayout>

    <include
        android:id="@+id/panel_edit_time"
        android:visibility="gone"
        layout="@layout/panel_time_picker"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <GridLayout
        android:visibility="gone"
        android:id="@+id/panel_edit_distance"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_distance"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberDecimal"
            style="@style/Text.Body.Optional"
            />
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Body.Optional"
            android:text="meters"
            />
    </GridLayout>

</RelativeLayout>