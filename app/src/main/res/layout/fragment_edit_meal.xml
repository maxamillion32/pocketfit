<?xml version="1.0" encoding="utf-8"?>
<team.monroe.org.pocketfit.view.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:fillViewport="true"
            >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="100dp">


            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/body_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edit_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meal Title"
                    android:singleLine="true"
                    android:maxLines="1"
                    style="@style/Text.Body"
                    />
            </LinearLayout>
            
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:src="@drawable/separator"
                android:scaleType="centerCrop"
                android:layout_margin="2dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">


                <GridLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_rowSpan="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/back_food"/>

                        <TextView
                            android:layout_centerInParent="true"
                            android:id="@+id/text_total_products"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/Text.Widget.Counter"
                            android:layout_marginRight="20dp"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_columnSpan="2"
                        android:id="@+id/caption_workout_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products"
                        style="@style/Text.Body.Section.Caption"
                        android:layout_marginBottom="10dp"
                        />

                    <ImageButton
                        android:id="@+id/button_add_product"
                        android:layout_gravity="right"
                        android:layout_column="4"
                        android:layout_row="1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        style="@style/Button.Action"
                        android:src="@drawable/cross_thin"/>

                    <TextView
                        android:id="@+id/text_calories"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        style="@style/Text.Body"
                        />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="3"
                        android:layout_columnSpan="3"
                        android:id="@+id/text_nutrition"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Nutrition"
                        android:singleLine="false"
                        android:maxLines="3"
                        style="@style/Text.Body.Optional"
                        />

                </GridLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/panel_days"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <ImageView
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:src="@drawable/separator"
                android:scaleType="centerCrop"
                android:layout_margin="2dp"/>

            <GridLayout
                android:visibility="visible"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_columnSpan="2"
                    android:id="@+id/caption_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cover"
                    style="@style/Text.Body.Section.Caption"
                    android:layout_marginBottom="5dp"
                    />

                <ImageView
                    android:id="@+id/image_select_image"
                    android:layout_gravity="right"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/Button.Action"
                    android:src="@drawable/take_picture"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    >

                    <ImageView
                        android:id="@+id/image_cover"
                        android:layout_centerInParent="true"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/foodcover_loading"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/round_frame_big"
                        />

                </RelativeLayout>

            </GridLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:src="@drawable/separator"
                android:scaleType="centerCrop"
                android:layout_margin="2dp"/>

            </LinearLayout>
        </LinearLayout>

        </ScrollView>

</team.monroe.org.pocketfit.view.SlidingRelativeLayout>